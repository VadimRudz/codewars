pipeline {
    agent any
    
    tools {
        nodejs "NodeJS" 
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', 
                url: 'https://github.com/VadimRudz/codewars.git'
            }
        }
        
        stage('Verify Node') {
            steps {
                sh 'node --version'
                sh 'npm --version'
            }
        }
        
        stage('Run Command') {
            steps {
                sh 'npm run cat'
            }

            post {
                junit 'test-results/test-results.xml'
            }
        }
    }
}